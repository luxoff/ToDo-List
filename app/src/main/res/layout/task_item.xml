<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="2dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_for_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkbox_for_task"
        android:layout_alignBottom="@+id/checkbox_for_task"
        android:layout_toStartOf="@id/iv_priority_flag"
        android:layout_toEndOf="@id/checkbox_for_task"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/example_text"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_priority_flag"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_task_title"
        android:layout_alignBottom="@id/tv_task_title"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_flags"
        android:contentDescription="@string/priority_flag" />

</RelativeLayout>