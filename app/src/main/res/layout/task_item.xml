<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_for_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkbox_for_task"
        android:layout_alignBottom="@+id/checkbox_for_task"
        android:layout_toStartOf="@id/iv_priority_flag"
        android:layout_toEndOf="@id/checkbox_for_task"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/example_text"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_priority_flag"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="225dp"
        android:src="@drawable/ic_flags" />

</RelativeLayout>